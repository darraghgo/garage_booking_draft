    <option value="john" id = "employee">john</option>
    <option value="mary" id = "employee">mary</option>
  </select>
                                <input type="submit">
                                </form>
                                 </td>
                            <td> <a href="/editBooking/<%= player.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit booking</a>  <a href="/bill/<%= player.id %>" target="_blank" rel="noopener" class="btn btn-md btn-info"> Bill</a></td> 
                             
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
        
      
</body>
</html>
